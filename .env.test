# Test Environment Configuration
NODE_ENV=test
BASE_URL=http://localhost:8080

# Database Configuration
ORIGIN_DB_PATH=./data/origin/nutrition_app.db
TEST_DB_PATH=./data/test-nutrition_app.db

# Authentication Configuration
AUTH_STRATEGY=ui-login
JWT_FALLBACK_LOGIN=false
PERSIST_AUTH_STATE=false

# AUTH_STRATEGY=jwt
# JWT_FALLBACK_LOGIN=true
# PERSIST_AUTH_STATE=true
# AUTH_STORAGE_PATH=.auth/user.json

# Authentication Retry Configuration
AUTH_MAX_RETRIES=3
AUTH_RETRY_DELAY=1000
AUTH_BACKOFF_MULTIPLIER=2

# Authentication Timeouts (in milliseconds)
AUTH_TIMEOUT=60000
SETUP_TIMEOUT=30000
VALIDATE_TIMEOUT=15000

# Debug Configuration
DEBUG_AUTH=true

# Test Data Configuration
CLEANUP_ENABLED=true
DEBUG_CLEANUP=false

# Test User Configuration
TEST_USER_PREFIX=test_
TEST_USER_DOMAIN=test.example.com

# Performance Configuration
TEST_TIMEOUT=30000
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true