{
  "name": "nutristats-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for NutriStats application using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:single": "AUTH_STRATEGY=ui-login playwright test tests/auth/login.spec.js",
    "test:single:headed": "AUTH_STRATEGY=ui-login playwright test tests/auth/login.spec.js --headed",
    "test:safe": "npm run test && npm run db:cleanup",
    "test:report": "playwright show-report test-artifacts/reports/html-report",
    "test:smoke": "node run-smoke-tests.js",
    "install:browsers": "playwright install",
    "db:cleanup": "node scripts/cleanup-test-data.js",
    "verify": "node scripts/verify-setup.js",
    "artifacts:init": "node scripts/manage-artifacts.js init",
    "artifacts:migrate": "node scripts/manage-artifacts.js migrate",
    "artifacts:clean": "node scripts/manage-artifacts.js clean",
    "artifacts:clean:all": "node scripts/manage-artifacts.js clean --all",
    "artifacts:clean:old": "node scripts/manage-artifacts.js clean --all --older-than=7",
    "artifacts:stats": "node scripts/manage-artifacts.js stats",
    "test:clean": "cross-env CLEANUP_ARTIFACTS=true npm run test",
    "test:no-clean": "cross-env CLEANUP_ARTIFACTS=false npm run test",
    "test:clean-old": "cross-env CLEANUP_MODE=old npm run test",
    "test:clean-selective": "cross-env CLEANUP_MODE=selective npm run test",
    "performance:analyze": "node monitoring/performance-analyzer.js",
    "performance:monitor": "node monitoring/performance-monitor.js",
    "performance:clean": "rm -rf test-artifacts/performance/*",
    "performance:stats": "ls -la test-artifacts/performance/ && echo 'Run npm run performance:analyze for detailed analysis'"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "nutristats"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "sqlite3": "^5.1.6"
  }
}
